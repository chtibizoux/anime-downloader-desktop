{
  "name": "anime-downloader-electron",
  "version": "3.1.0",
  "description": "A windows app to download animes",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/chtibizoux/anime-downloader-desktop.git"
  },
  "dependencies": {
    "electron-updater": "^5.0.1",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "electron": "^16.2.5",
    "electron-builder": "^22.14.13"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder --win -p always"
  },
  "keywords": [
    "download",
    "anime"
  ],
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "files": [
      "**/*",
      "!Downloads",
      "!config.json"
    ],
    "appId": "com.chtibizoux.animedownloader",
    "productName": "Anime Donwloader",
    "win": {
      "icon": "./images/icon.jpg",
      "publish": [
        "github"
      ]
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "deleteAppDataOnUninstall": false
    },
    "directories": {
      "buildResources": "public"
    }
  },
  "author": "Cl√©ment Songis",
  "license": "ISC"
}
